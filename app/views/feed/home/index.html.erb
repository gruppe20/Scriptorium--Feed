<h1>Feeds</h1>

<% @feeds.each do |feed| %>
  <% get_feed(feed.url) %>

  <h2><%= link_to @title, @link, :target => "_blank" %></h2>

  <% @items.each do |item| %>
      <small>(<%= item.date.strftime('%H:%M %d/%m/%Y') %>)</small> -
      <strong><%= link_to item.title, item.link, :target => "_blank" %></strong> <br />
  <% end %>
  <br />
<% end %>


<h2>Sorted</h2>
<% get_feeds %>
<% @sorted_items.each do |item| %>
  <small>(<%= item.date.strftime('%H:%M %d/%m/%Y') %>)</small> -
  <strong><%= link_to item.title, item.link, :target => "_blank" %></strong> <br />
<% end %>
